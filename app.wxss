/*
 最大盒子 父级
*/
.container-fluid {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
} 
/*
 外盒子 子级
*/
/* .offset-box {
  width: 100%;
  height: auto;
} */

input, textarea {
  border: 1rpx solid #ddd;
  border-radius: 5px;
  box-sizing: border-box;
  margin-left: 12rpx;
}

input {
  padding: 0 24rpx;
  height: 64rpx;
}
input:hover,
textarea:hover
 {
  transition: 0.5s all;
  border: 1rpx solid #1aac19;
}
textarea {
  padding: 12rpx;
}